# Application
NEXT_PUBLIC_APP_NAME="Smart News Aggregator"
NEXT_PUBLIC_APP_DESCRIPTION="Your personalized news aggregation platform"

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_JWT_COOKIE_NAME=smart_news_token
NEXT_PUBLIC_REFRESH_TOKEN_COOKIE_NAME=smart_news_refresh

# Feature Flags
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_BOOKMARKS=true
NEXT_PUBLIC_ENABLE_CATEGORIES=true

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Social Media Integration
NEXT_PUBLIC_TWITTER_HANDLE=@smartnews
NEXT_PUBLIC_FACEBOOK_PAGE=smartnews
NEXT_PUBLIC_LINKEDIN_PAGE=smart-news

# Performance
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_CACHE_TIME=3600
NEXT_PUBLIC_STALE_TIME=300

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# UI/UX Settings
NEXT_PUBLIC_ITEMS_PER_PAGE=20
NEXT_PUBLIC_MAX_TITLE_LENGTH=100
NEXT_PUBLIC_MAX_DESCRIPTION_LENGTH=200
NEXT_PUBLIC_INFINITE_SCROLL_THRESHOLD=3

# PWA Settings
NEXT_PUBLIC_PWA_ENABLED=true
NEXT_PUBLIC_PWA_APP_NAME="Smart News"
NEXT_PUBLIC_PWA_APP_SHORT_NAME="SNews"
NEXT_PUBLIC_PWA_THEME_COLOR="#000000"
NEXT_PUBLIC_PWA_BACKGROUND_COLOR="#ffffff"

# Regional Settings
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_DEFAULT_TIMEZONE=UTC
NEXT_PUBLIC_SUPPORTED_LOCALES=["en", "es", "fr", "de"]

# Content Delivery
NEXT_PUBLIC_IMAGES_DOMAIN=localhost
NEXT_PUBLIC_MEDIA_DOMAIN=localhost

# Development
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_API_MOCKING=false
NEXT_PUBLIC_DEBUG_TOOLS=true