# ========================================
# SMART NEWS AGGREGATOR - Environment Variables
# ========================================
# 
# ВАЖНО: Скопируйте этот файл в .env и заполните реальными значениями
# cp .env.example .env
#
# Для генерации безопасных паролей используйте:
# openssl rand -base64 32
# openssl rand -hex 32
# ========================================

# ===== DATABASE =====
POSTGRES_SERVER=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_$(openssl rand -base64 32)
POSTGRES_DB=news_aggregator
POSTGRES_PORT=5432

# ===== REDIS =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_$(openssl rand -base64 32)
REDIS_DB=0

# ===== SECURITY =====
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_MUST_BE_AT_LEAST_32_CHARACTERS
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== SUPERUSER =====
FIRST_SUPERUSER_EMAIL=admin@smartnews.local
FIRST_SUPERUSER_PASSWORD=CHANGE_ME_$(openssl rand -base64 16)
FIRST_SUPERUSER_FULL_NAME=Admin User

# ===== ELASTICSEARCH =====
ELASTICSEARCH_URL=http://elasticsearch:9200

# ===== RABBITMQ =====
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=CHANGE_ME_$(openssl rand -base64 16)

# ===== EXTERNAL APIs =====
NEWS_API_KEY=your_news_api_key_here

# ===== ML SERVICE =====
ML_SERVICE_URL=http://ml_service:8001
ML_SERVICE_TIMEOUT=30

# ===== MONITORING =====
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_$(openssl rand -base64 16)

# ===== APPLICATION =====
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
BACKEND_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===== SENTRY (Optional) =====
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
