# Application Settings
APP_NAME="Smart News Scraper Service"
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# API Keys
NEWS_API_KEY=your-newsapi-key-here
GOOGLE_NEWS_API_KEY=your-google-news-api-key
MEDIASTACK_API_KEY=your-mediastack-key
NEWSDATA_API_KEY=your-newsdata-key

# Celery Settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TIMEZONE=UTC
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_ENABLE_UTC=true

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Scraping Settings
MAX_RETRIES=3
RETRY_DELAY=5
REQUEST_TIMEOUT=30
USER_AGENT="Smart News Scraper/1.0"
RESPECT_ROBOTS_TXT=true
FOLLOW_REDIRECTS=true
MAX_REDIRECTS=5

# Rate Limiting
REQUESTS_PER_SECOND=2
REQUESTS_PER_MINUTE=100
REQUESTS_PER_HOUR=1000
ENABLE_RATE_LIMITING=true

# Backend API
BACKEND_URL=http://localhost:8000
BACKEND_API_KEY=your-backend-api-key
API_VERSION=v1
API_TIMEOUT=30

# ML Service
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_API_KEY=your-ml-service-api-key
ML_SERVICE_TIMEOUT=30

# Schedule Settings
SCHEDULE_ENABLED=true
NEWS_UPDATE_INTERVAL=300  # 5 minutes
SOURCE_UPDATE_INTERVAL=86400  # 24 hours
CLEANUP_INTERVAL=3600  # 1 hour

# Content Settings
MIN_ARTICLE_LENGTH=100
MAX_ARTICLE_LENGTH=50000
REQUIRED_FIELDS=["title", "content", "published_date"]
SKIP_PAYWALLED=true
EXTRACT_IMAGES=true
SAVE_ORIGINAL_HTML=false

# Proxy Settings
USE_PROXY=false
PROXY_LIST_PATH=proxies.txt
ROTATE_PROXIES=true
PROXY_CHECK_URL=http://httpbin.org/ip
PROXY_CHECK_TIMEOUT=10

# Storage Settings
STORAGE_PATH=data/articles
MAX_STORAGE_SIZE=10GB
CLEANUP_THRESHOLD=0.9
COMPRESSION_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=scraper.log
JSON_LOGS=false
LOG_ROTATION=true
LOG_RETENTION_DAYS=30

# Error Reporting
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Feature Flags
ENABLE_ASYNC_SCRAPING=true
ENABLE_ARTICLE_DEDUPLICATION=true
ENABLE_CONTENT_EXTRACTION=true
ENABLE_AUTO_TAGGING=true

# Development
ENABLE_DEBUG_MODE=true  # Set to false in production
SAVE_RAW_RESPONSES=false
PROFILE_TASKS=false