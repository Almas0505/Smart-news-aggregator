{
  "dashboard": {
    "title": "Smart News - System Overview",
    "tags": ["smart-news", "overview", "system"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "System Health",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Backend Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 1},
        "targets": [
          {
            "expr": "up{job=\"backend\"}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 3,
        "title": "ML Service Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 1},
        "targets": [
          {
            "expr": "up{job=\"ml-service\"}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Scraper Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 1},
        "targets": [
          {
            "expr": "up{job=\"scraper\"}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "Database Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 1},
        "targets": [
          {
            "expr": "pg_up{instance=\"postgres:5432\"}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "options": {"0": {"text": "DOWN", "color": "red"}}},
              {"type": "value", "options": {"1": {"text": "UP", "color": "green"}}}
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "Traffic & Performance",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 5}
      },
      {
        "id": 7,
        "title": "Total Requests/sec",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "Total RPS"
          }
        ]
      },
      {
        "id": 8,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95 latency"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p99 latency"
          }
        ]
      },
      {
        "id": 9,
        "title": "Business Metrics",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 14}
      },
      {
        "id": 10,
        "title": "Total News Articles",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 15},
        "targets": [
          {
            "expr": "sum(news_total{job=\"backend\"})"
          }
        ]
      },
      {
        "id": 11,
        "title": "Articles Today",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 15},
        "targets": [
          {
            "expr": "sum(increase(scraper_articles_scraped_total[24h]))"
          }
        ]
      },
      {
        "id": 12,
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 15},
        "targets": [
          {
            "expr": "sum(users_active_total{job=\"backend\"})"
          }
        ]
      },
      {
        "id": 13,
        "title": "ML Predictions Today",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 15},
        "targets": [
          {
            "expr": "sum(increase(ml_predictions_total[24h]))"
          }
        ]
      },
      {
        "id": 14,
        "title": "Resource Usage",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 19}
      },
      {
        "id": 15,
        "title": "CPU Usage by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m])",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 16,
        "title": "Memory Usage by Service",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 17,
        "title": "Error Rates",
        "type": "row",
        "gridPos": {"h": 1, "w": 24, "x": 0, "y": 28}
      },
      {
        "id": 18,
        "title": "HTTP 5xx Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 29},
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (job)",
            "legendFormat": "{{job}}"
          }
        ]
      },
      {
        "id": 19,
        "title": "Scraper Errors",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 29},
        "targets": [
          {
            "expr": "rate(scraper_errors_total[5m])",
            "legendFormat": "{{source}}"
          }
        ]
      }
    ]
  }
}
