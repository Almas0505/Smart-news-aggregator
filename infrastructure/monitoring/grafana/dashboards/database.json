{
  "dashboard": {
    "title": "Smart News - Database Performance",
    "tags": ["smart-news", "database", "postgresql"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Database Connections",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "db_connections_active{job=\"backend\"}",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "db_connections_idle{job=\"backend\"}",
            "legendFormat": "Idle Connections"
          }
        ]
      },
      {
        "id": 2,
        "title": "Query Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket{job=\"backend\"}[5m]))",
            "legendFormat": "{{operation}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Queries Per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(db_queries_total{job=\"backend\"}[5m])",
            "legendFormat": "{{operation}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Database Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "pg_database_size_bytes{datname=\"news_aggregator\"}",
            "legendFormat": "Database Size"
          }
        ]
      },
      {
        "id": 5,
        "title": "Active Queries",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"news_aggregator\",state=\"active\"}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Idle Queries",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 16},
        "targets": [
          {
            "expr": "pg_stat_activity_count{datname=\"news_aggregator\",state=\"idle\"}"
          }
        ]
      },
      {
        "id": 7,
        "title": "Transaction Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(pg_stat_database_xact_commit{datname=\"news_aggregator\"}[5m])",
            "legendFormat": "Commits"
          },
          {
            "expr": "rate(pg_stat_database_xact_rollback{datname=\"news_aggregator\"}[5m])",
            "legendFormat": "Rollbacks"
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Hit Ratio",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "pg_stat_database_blks_hit{datname=\"news_aggregator\"} / (pg_stat_database_blks_hit{datname=\"news_aggregator\"} + pg_stat_database_blks_read{datname=\"news_aggregator\"})"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      }
    ]
  }
}
