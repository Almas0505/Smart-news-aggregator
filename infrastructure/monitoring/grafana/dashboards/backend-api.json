{
  "dashboard": {
    "title": "Smart News - Backend API",
    "tags": ["smart-news", "backend", "api"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\"}[5m])",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Duration (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"backend\"}[5m]))",
            "legendFormat": "{{method}} {{path}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"backend\",status=~\"5..\"}[5m])",
            "legendFormat": "{{method}} {{path}} - {{status}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "Active Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "http_requests_in_progress{job=\"backend\"}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "sum(http_requests_total{job=\"backend\"})"
          }
        ]
      },
      {
        "id": 6,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"backend\"}[5m])",
            "legendFormat": "CPU Usage"
          }
        ]
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"backend\"}",
            "legendFormat": "Memory (bytes)"
          }
        ]
      },
      {
        "id": 8,
        "title": "News Created (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "increase(news_created_total{job=\"backend\"}[1h])"
          }
        ]
      },
      {
        "id": 9,
        "title": "News Views (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "increase(news_views_total{job=\"backend\"}[1h])"
          }
        ]
      },
      {
        "id": 10,
        "title": "Users Registered (Last Hour)",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "increase(users_registered_total{job=\"backend\"}[1h])"
          }
        ]
      },
      {
        "id": 11,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 24},
        "targets": [
          {
            "expr": "rate(cache_hits_total{job=\"backend\"}[5m]) / (rate(cache_hits_total{job=\"backend\"}[5m]) + rate(cache_misses_total{job=\"backend\"}[5m]))"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "unit": "percentunit"
          }
        }
      }
    ]
  }
}
