# Smart News Aggregator - Environment Variables
# Copy this file to .env and fill in your values

# ==================== Project ====================
PROJECT_NAME=Smart News Aggregator
ENVIRONMENT=development
DEBUG=True

# ==================== Database ====================
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme123
POSTGRES_DB=news_aggregator

# Database URL (auto-generated)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# ==================== Redis ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis URL (auto-generated)
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ==================== RabbitMQ ====================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# RabbitMQ URL (auto-generated)
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# ==================== Elasticsearch ====================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=
ELASTICSEARCH_PASSWORD=

# ==================== Security ====================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== API Keys ====================
# Get from: https://newsapi.org/
NEWS_API_KEY=your-news-api-key-here

# OpenAI (optional, for advanced ML features)
OPENAI_API_KEY=

# ==================== Services URLs ====================
BACKEND_URL=http://localhost:8000
ML_SERVICE_URL=http://localhost:8001
FRONTEND_URL=http://localhost:3000

# ==================== CORS ====================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ==================== Email (Optional) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@smartnews.com

# ==================== Storage ====================
# MinIO / S3 Compatible
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=news-images
MINIO_SECURE=False

# ==================== Monitoring ====================
# Sentry (optional)
SENTRY_DSN=

# Prometheus
PROMETHEUS_ENABLED=True

# ==================== Celery ====================
CELERY_BROKER_URL=${RABBITMQ_URL}
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_TASK_ALWAYS_EAGER=False

# ==================== Scraping ====================
SCRAPE_INTERVAL=1800
MAX_WORKERS=4
SCRAPE_TIMEOUT=30

# ==================== ML Models ====================
MODEL_PATH=/app/data/models
SPACY_MODEL=en_core_web_sm
USE_GPU=False

# ==================== Logging ====================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/smartnews/app.log

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# ==================== Docker ====================
COMPOSE_PROJECT_NAME=smart-news-aggregator
DOCKER_REGISTRY=

# ==================== Production Settings ====================
# Set these in production only
# HTTPS_ONLY=True
# SECURE_COOKIES=True
# HSTS_ENABLED=True
# CSP_ENABLED=True
