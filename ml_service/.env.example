# Application Settings
APP_NAME="Smart News ML Service"
ENVIRONMENT=development  # development, staging, production
DEBUG=true
API_PREFIX=/api

# Server Settings
HOST=0.0.0.0
PORT=8001
WORKERS_COUNT=2
RELOAD=true  # Set to false in production

# Model Settings
MODEL_PATH=app/models/saved
DEFAULT_MODEL_VERSION=v1
ENABLE_GPU=false
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=512

# Transformer Models
BERT_MODEL_NAME=bert-base-uncased
SENTIMENT_MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
SUMMARY_MODEL_NAME=facebook/bart-large-cnn
TOPIC_MODEL_NAME=bert-base-uncased

# NLP Settings
LANGUAGE_DETECTION_CONFIDENCE=0.8
SPACY_MODEL=en_core_web_sm
ENABLE_LEMMATIZATION=true
MIN_KEYWORD_LENGTH=3
MAX_KEYWORDS=10

# Classification Settings
CONFIDENCE_THRESHOLD=0.6
TOP_K_PREDICTIONS=3
ENABLE_MULTILABEL=true
MIN_CATEGORY_CONFIDENCE=0.3

# Text Generation
MAX_SUMMARY_LENGTH=150
MIN_SUMMARY_LENGTH=50
SUMMARY_DO_SAMPLE=true
SUMMARY_TEMPERATURE=0.7

# Performance Settings
CACHE_TTL_SECONDS=3600
BATCH_PROCESSING_SIZE=64
ENABLE_CUDA_OPTIMIZATION=true
NUM_WORKERS=4

# API Rate Limiting
RATE_LIMIT_PER_SECOND=5
RATE_LIMIT_BURST=10
RATE_LIMIT_ENABLED=true

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
JSON_LOGS=false

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=
ENABLE_REDIS_CACHE=false

# Security
API_KEY_HEADER=X-API-Key
API_KEY=your-ml-service-api-key-here
CORS_ORIGINS=["http://localhost:8000"]

# Model Versioning
MODEL_REGISTRY_PATH=models/registry
KEEP_LAST_N_MODELS=3
AUTO_RELOAD_MODELS=false

# Experiment Tracking
MLFLOW_TRACKING_URI=http://localhost:5000
ENABLE_EXPERIMENT_TRACKING=false
EXPERIMENT_NAME=news_classification

# Logging
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
LOG_FILE_PATH=logs/ml_service.log

# Development
ENABLE_DEBUG_ENDPOINTS=true  # Set to false in production
PROFILE_ENDPOINTS=false
ENABLE_SWAGGER=true